<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="E2S.NginxPanel.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <BoxView x:Name="Top" Grid.Row="0" Grid.ColumnSpan="2" Color="LightSkyBlue"   />
        <BoxView x:Name="Side" Grid.Row="1" Grid.Column="0" Color="Red"/>
        <BoxView x:Name="Main" Grid.Row="1" Grid.Column="1" Color="gray"/>
        <BoxView x:Name="Bottom" Grid.Row="2" Grid.ColumnSpan="2" Color="Black"   />


    </Grid>

</ContentPage>
